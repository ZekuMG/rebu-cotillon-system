{
  "name": "cotillon-rebu-system",
  "productName": "Rebu Cotill√≥n",
  "version": "0.3.0",
  "private": true,
  "main": "electron-main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder -w --publish always",
    "publish": "dotenv electron-builder -- --publish always"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.95.3",
    "electron-updater": "^6.3.9",
    "lucide-react": "^0.453.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sweetalert2": "^11.14.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-legacy": "5.3.2",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^11.0.0",
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8",
    "eslint": "^9.13.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.13",
    "globals": "^15.11.0",
    "terser": "5.46.0",
    "vite": "^5.4.9",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.rebu.app",
    "productName": "Cotillon Rebu System",
    "files": [
      "dist/**/*",
      "electron-main.cjs",
      "public/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "ZekuMG",
      "repo": "rebu-cotillon-system"
    }
  }
}
